<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mycdomain.MyApp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>JGApp</name>
    <description>A sample Apache Cordova application that responds to the deviceready event.</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">Apache Cordova Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="browser">
        <preference name="SplashScreen" value="/resources/images/jgapp.png" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashScreenBackgroundColor" value="green" />
        <preference name="ShowSplashScreen" value="true" />
        <preference name="SplashScreenWidth" value="200" />
        <preference name="SplashScreenHeight" value="300" />
    </platform>

    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="CodePushDeploymentKey" value="KzmiMD1jgcoaOY_WvfHYXaVbv6EVV1CBBKNbG" />

        <icon density="mdpi" src="res/screen/android/jgapp_icon_mdpi.png" />
        <icon density="ldpi" src="res/screen/android/jgapp_icon_ldpi.png" />
        <icon density="hdpi" src="res/screen/android/jgapp_icon_hdpi.png" />
        <icon density="xhdpi" src="res/screen/android/jgapp_icon_xhdpi.png" />
        <icon density="xxhdpi" src="res/screen/android/jgapp_icon_xxhdpi.png" />

        <splash density="land-hdpi" src="res/screen/android/jgapp_hdpi_land.png" />
        <splash density="land-ldpi" src="res/screen/android/jgapp_ldpi_land.png" />
        <splash density="land-mdpi" src="res/screen/android/jgapp_mdpi_land.png" />
        <splash density="land-xhdpi" src="res/screen/android/jgapp_xhdpi_land.png" />
        <splash density="port-hdpi" src="res/screen/android/jgapp_hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/jgapp_ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/jgapp_mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/jgapp_xhdpi.png" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        
        <splash height="480" src="res/screen/ios/Default~iphone.png" width="320" />
        <splash height="960" src="res/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="res/screen/ios/Default-Portrait~ipad_768x1024.png" width="768" />
        <splash height="2048" src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="res/screen/ios/Default-Landscape~ipad_1024x768.png" width="1024" />
        <splash height="1536" src="res/screen/ios/Default-Landscape@2x~ipad_2048x1536.png" width="2048" />
        <splash height="1136" src="res/screen/ios/Default-568h@2x~iphone_640x1136.png" width="640" />
        <splash height="1334" src="res/screen/ios/Default-750@2x~iphone6-portrait_750x1134.png" width="750" />
        <splash height="2208" src="res/screen/ios/Default-1242@3x~iphone6s-portrait_1242x2208.png" width="1242" />
        <splash height="1242" src="res/screen/ios/Default-1242@3x~iphone6s_landscape_2208x1242.png" width="2208" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-code-push" spec="~1.9.2-beta" />
    <plugin name="cordova-plugin-camera" spec="~2.3.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
</widget>
